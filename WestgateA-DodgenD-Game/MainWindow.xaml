<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" SizeToContent="WidthAndHeight" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp"  DataContext="{Binding RelativeSource={RelativeSource Self} }">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PresentationFramework.Classic;V4.0.0.0;31bf3856ad364e35;component/themes/classic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="336"/>
            <ColumnDefinition Width="672"/>
            <ColumnDefinition Width="336"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="768"/>
        </Grid.RowDefinitions>
        <!--<Canvas Grid.Column="0" Background="Black"/>-->
        <Canvas x:Name="CanvasWindowDecoration" Grid.Column="1" Height="768" Panel.ZIndex="0" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" IsEnabled="False">
            <Image x:Name="Image" Grid.Column="1" Height="768" Width="672" Source="Resources/1181242110212.png" Visibility="Hidden"/>
            <Label FontFamily="{StaticResource ARCADE}" x:Name="label1up" Content="1UP" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0" Canvas.Left="76" Width="70" FontSize="24" Height="29" Canvas.Top="-5" HorizontalContentAlignment="Center" Foreground="Black"/>
            <Label FontFamily="{StaticResource ARCADE}" x:Name="labelHighScore" Content="HIGH SCORE" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="0" FontSize="24" Height="29" HorizontalContentAlignment="Center" Canvas.Left="221" Width="235" Canvas.Top="-5" Foreground="Black"/>
            <Label FontFamily="{StaticResource ARCADE}" x:Name="labelCurrentScore" Content="000000" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0" Canvas.Left="24" Width="146" FontSize="24" Height="29" Canvas.Top="22" HorizontalContentAlignment="Right" Foreground="Red" VerticalContentAlignment="Center"/>
            <Label FontFamily="{StaticResource ARCADE}" x:Name="labelCurrentScore_Copy" Content="000000" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="0" Canvas.Left="264" Width="144" FontSize="24" Height="29" Canvas.Top="22" HorizontalContentAlignment="Center" Foreground="Red" VerticalContentAlignment="Center"/>
            <Grid x:Name="GridLevelIndicators_Copy" Height="39" Canvas.Left="453" Canvas.Top="729" Width="195">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="ÿ" Canvas.Left="508" Canvas.Top="673" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Wingdings" FontSize="36" Foreground="#FFFFCD00"/>
                <Label Grid.Column="1" Content="ÿ" Canvas.Left="508" Canvas.Top="673" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Wingdings" FontSize="36" Foreground="#FF00A7FF"/>
                <Label Grid.Column="2" Content="ÿ" Canvas.Left="508" Canvas.Top="673" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Wingdings" FontSize="36" Foreground="#FF66CD30"/>
                <Label Grid.Column="3" Content="ÿ" Canvas.Left="508" Canvas.Top="673" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Wingdings" FontSize="36" Foreground="#FFFF3000"/>
                <Label Grid.Column="4" Content="ÿ" Canvas.Left="508" Canvas.Top="673" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Wingdings" FontSize="36" Foreground="Black"/>
            </Grid>
            <StackPanel Canvas.Left="16" Height="42" Canvas.Top="723" Width="287" Orientation="Horizontal">
                <Image x:Name="ImageLife1" Grid.Column="1" Source="Resources/PlayerCursor.png" HorizontalAlignment="Left" Margin="17.4,0,0,0" Width="29" Grid.ColumnSpan="2"/>
            </StackPanel>
        </Canvas>

        <Canvas x:Name="CanvasGameScreen" Grid.Column="1" Height="768" Panel.ZIndex="1">
        </Canvas>




        <!--<Canvas Grid.Column="2" Background="Black"/>-->

    </Grid>
</Window>
