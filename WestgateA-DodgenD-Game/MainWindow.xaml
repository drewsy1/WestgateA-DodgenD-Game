<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" SizeToContent="WidthAndHeight" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp"  DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="336"/>
            <ColumnDefinition Width="672"/>
            <ColumnDefinition Width="336"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="768"/>
        </Grid.RowDefinitions>
        <!--<Canvas Grid.Column="0" Background="Black"/>-->
        <Canvas x:Name="CanvasGameScreen" Grid.Column="1" Height="768" Panel.ZIndex="1" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
        <Image x:Name="Image" Grid.Column="1" Height="768" Width="672" Source="Resources/1181242110212.png"/>
        <DataGrid x:Name="dataGrid" Grid.Column="2" HorizontalAlignment="Left" Height="185" Margin="10,88,0,0" VerticalAlignment="Top" Width="316" ItemsSource="{Binding Path=EnemyTable}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding ObjectName}"></DataGridTextColumn>
                <DataGridTextColumn Header="X" Binding="{Binding LocationCoords.X}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!--<Canvas Grid.Column="2" Background="Black"/>-->

    </Grid>
</Window>
